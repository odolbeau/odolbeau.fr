                {%- endif -%}
            </div>
        {% endif %}

        {{ parent() }}
    </article>

    {%- if page.tags -%}
    <div class="blog-tags">
        Tags: {{ page.tags | join(", ") }}
    </div>
    {%- endif -%}

    <ul class="pager blog-pager">
        {%- if page.prev is defined -%}
        <li class="previous">
            <a href="{{ url(page.prev) }}" data-toggle="tooltip" data-placement="top" title="{{ page.prev.title }}">&larr; Previous Post</a>
        </li>
        {%- endif -%}
        {%- if page.next is defined -%}
        <li class="next">
            <a href="{{ url(page.next) }}" data-toggle="tooltip" data-placement="top" title="{{ page.next.title }}">Next Post &rarr;</a>
        </li>
        {%- endif -%}
    </ul>
{% endblock content %}
